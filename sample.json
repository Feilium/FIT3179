{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 600,
  "title": "Death Ratio of Covid-19 Cases in India as of 21st September 2021",
  "projection": {
    "type": "equirectangular"
  },
  "layer": [
    {
      "data": {
        "url": "india-states.json",
        "format": {
          "type": "topojson",
          "feature": "IND_adm1"
        }
      },
      "mark": {
        "type": "geoshape",
        "stroke": "white"
      },
      "transform": [
        {
          "lookup": "properties.NAME_1",
          "from": {
            "data": {
              "url": "india-covid.csv"
            },
            "key": "State/UTs",
            "fields": [
              "Death Ratio (%)"
            ]
          }
        }
      ],
      "encoding": {
        "color": {
          "field": "Death Ratio (%)",
          "type": "quantitative",
          "title": "Death Ratio (%)"
        },
        "tooltip": [
          {
            "field": "properties.NAME_1",
            "type": "nominal",
            "title": "State"
          },
          {
            "field": "Death Ratio (%)",
            "type": "quantitative",
            "title": "Death Ratio (%)"
          }
        ]
      }
    }
  ]
}