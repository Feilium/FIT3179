{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 300,
    "height": 300,
    "title": "Percentage of COVID-19 cases against the 2011 Population Census",
    "data": {
        "url": "india-covid.csv"
      },
      "params": [
        {
          "name": "State/UTs",
          "select":{
            "type":"point",
            "fields": ["State/UTs"]
          },
          "bind":"legend"
      }
    ],
    "mark": "circle",
    "encoding": {
        "x":{
            "field": "Total_population_2011",
            "type": "quantitative",
            "title": "Total Population in 2011",
            "scale":{
                "type": "sqrt"
            }
        },
        "y":{
            "field":"Total Cases",
            "type": "quantitative",
            "scale":{
                "type":"sqrt"
            }
        },
        "color":{
            "field":"State/UTs",
            "type":"nominal"
        },
        "size":{
            "field":"Total_population_2011",
            "type":"quantitative"
        },
        "opacity":{
            "condition":{
              "param":"State/UTs",
            "value":1.0},
            "value":0.2
          }
    }
    }
