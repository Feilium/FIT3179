{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 1000,
  "height": 600,
  "title": "Current India Covid-19 Cases",
  "projection": {
    "type": "equirectangular"
  },
  "layer": [
    {
      "data": {
        "url": "india-states.json",
        "format": {
          "type": "topojson",
          "feature": "IND_adm1"
        }
      },
      "mark": {
        "type": "geoshape",
        "stroke": "lightskyblue"
      },
      "transform": [
        {
          "lookup": "properties.NAME_1",
          "from": {
            "data": {
              "url": "india-covid.csv"
            },
            "key": "State/UTs",
            "fields": [
              "Active Ratio (%)"
            ]
          }
        }
      ],
      "encoding": {
        "color": {
          "field": "Active Ratio (%)",
          "type": "quantitative",
          "title": "Active Ratio of COVID-19 Cases",
          "scale": {
            "type": "log"
          }
        }
      }
    }
  ]
}
