{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 1000,
  "height": 600,
  "title": "Active Ratio of Covid-19 Cases in India as of 21st September 2021",
  "projection": {
    "type": "equirectangular"
  },
  "layer": [
    {
      "data": {
        "url": "india-states.json",
        "format": {
          "type": "topojson",
          "feature": "IND_adm1"
        }
      },
      "mark": {
        "type": "geoshape",
        "stroke": "lightskyblue"
      },
      "transform": [
        {
          "lookup": "properties.NAME_1",
          "from": {
            "data": {
              "url": "india-covid.csv"
            },
            "key": "State/UTs",
            "fields": [
              "Active Ratio (%)"
            ]
          }
        }
      ],
      "encoding": {
        "color": {
          "field": "Active Ratio (%)",
          "type": "quantitative",
          "title": "Log Active Ratio of COVID-19",
          "scale": {
            "type": "log"
          }
        },
        "tooltip": [
          {
            "field": "properties.NAME_1",
            "type": "nominal",
            "title": "State"
          },
          {
            "field": "Active Ratio (%)",
            "type": "quantitative",
            "title": "log Active Ratio of COVID-19"
          }
          ]
        }  
      }
    ]
  }