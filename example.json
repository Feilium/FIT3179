{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 1000,
    "height": 750,
    "title": "Living standards in each US states (0-100)",
    "projection": {
        "type": "albersUsa"
    },
    "layer": [
        {
            "data": {
                "url": "js/us.json",
                "format": {
                    "type": "topojson",
                    "feature": "20m"
                }
            },
            "mark": {
                "type": "geoshape",
                "stroke": "lightgray"
            },
            "transform": [
                {
                    "lookup": "properties.NAME",
                    "from": {
                        "data": {
                            "url": "data/state_living_standards.csv"
                        },
                        "key": "state",
                        "fields": [
                            "min_living"
                        ]
                    }
                },
                {
                    "calculate": "datum.min_living + 0",
                    "as": "min_living"
                }
            ],
            "encoding": {
                "color": {
                    "field": "min_living",
                    "type": "quantitative",
                    "title": "Minimum Cost of Living Index"
                },
                "tooltip": [
                    {
                        "field": "properties.NAME",
                        "type": "nominal",
                        "title": "states"
                    },
                    {
                        "field": "min_living",
                        "type": "quantitative",
                        "title": "minimum living cost"
                    }
                ]
            }
        },
        {
            "data": {
                "url": "data/state_living_standards.csv"
            },
            "encoding": {
                "longitude": {
                    "field": "longitude",
                    "type": "quantitative"
                },
                "latitude": {
                    "field": "latitude",
                    "type": "quantitative"
                }
            },
            "layer": [
                {
                    "mark": {
                        "type": "circle",
                        "color": "orange"
                    }
                },
                {
                    "mark": {
                        "type": "text",
                        "dy": -10
                    },
                    "encoding": {
                        "text": {
                            "field": "state",
                            "type": "nominal"
                        }
                    }
                }
            ]
        }
    ]
}